<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/connIndicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textColor="#0C0707"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="239dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="544dp"
        android:background="#0AC0BA"
        android:text="Operator Name"
        android:textAlignment="center"
        android:textColor="#110D0D"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/UoperatorName"
        android:layout_width="239dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="481dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="239dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="422dp"
        android:background="#0AC0BA"
        android:text="Time"
        android:textAlignment="center"
        android:textColor="#FA090101"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/Utime"
        android:layout_width="239dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="361dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F7070101" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="239dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="298dp"
        android:background="#0AC0BA"
        android:text="Date"
        android:textAlignment="center"
        android:textColor="#F7090202"
        android:textSize="24sp" />

    <Button
        android:id="@+id/update"
        android:layout_width="155dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="149dp"
        android:text="Start"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/Udate"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="232dp"
        android:duplicateParentState="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Button
        android:id="@+id/viewData"
        android:layout_width="155dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="607dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="56dp"
        android:text="View Users" />

</RelativeLayout>